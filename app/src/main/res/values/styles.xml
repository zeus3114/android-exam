<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme.UserProfileAndroidExam">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="titleStyle">
        <item name="android:textSize">@dimen/screen_title_24</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="messageStyle">
        <item name="android:textSize">@dimen/screen_message_16</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="itemTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#262626</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/basic</item>
    </style>

    <style name="itemValueStyle">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/basic</item>
    </style>

    <style name="itemNameStyle">
        <item name="android:textColor">#262626</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/basic</item>
    </style>

    <style name="itemEmailStyle">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/basic</item>
    </style>
</resources>